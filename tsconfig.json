{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "types": [
      "node",
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "tests",
    "./**/**.ts",
    "./src/tests/**/*.ts",
    "./src/types/**/*.ts"
  ]
}
